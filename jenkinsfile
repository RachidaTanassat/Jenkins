pipeline {
    environment {
        registry = "rachidatanast245/job3tp2v3"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                 git branch :'master', url 'https://github.com/RachidaTanassat/Jenkins.git'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build("${registry}:$BUILD_NUMBER")
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    echo "Tests passed"
                    // Ajoute ici des commandes pour tester l'image si n√©cessaire
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    docker.withRegistry('', registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}